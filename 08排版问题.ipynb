    "def draw_diamond(n):\n",
    "    for i in range(n):\n",
    "        print(' '*(n-i-1), end='')\n",
    "        print('*'*(2*i+1))\n",
    "    for i in range(n-2, -1, -1):\n",
    "        print(' '*(n-i-1), end='')\n",
    "        print('*'*(2*i+1))\n",
    "n = int(input())\n",
    "draw_diamond(n)"
   ]
